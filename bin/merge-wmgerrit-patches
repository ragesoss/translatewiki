#!/bin/bash
set -o nounset -o pipefail -o errexit

U="l10n-bot"
GERRIT=("$U@gerrit.wikimedia.org" -p 29418)

# HACK: Ignore patches in the EUCopyrightCampaign repos (T203297)
ssh "${GERRIT[@]}" gerrit query --format=TEXT "owner:$U" "project:$1" status:open -- -project:mediawiki/extensions/EUCopyrightCampaign -project:mediawiki/skins/EUCopyrightCampaignSkin |
grep '  url:'  |
cut -d/ -f5 |
sort |
xargs -I ____ ssh "${GERRIT[@]}" gerrit review ____,1 --code-review 2 --verified 2 --submit
